<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/botaoPadraoMedico"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    >
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonPerfil"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:tag="1"
            android:background="@drawable/botao_base"
            android:onClick="AbrirAbaPerfil"/>
        <LinearLayout
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:translationZ="30dp"
            android:weightSum="1.0" >
        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight=".50"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:gravity="center_vertical"
            android:text="Hemograma completo"
            android:textAlignment="center"
            android:textSize="17dp"
            android:textStyle="bold"
            android:translationZ="5dp"
            tools:ignore="RtlCompat" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".50">
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:text="Corpo Inteiro"
                    android:maxLength="20"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:translationZ="5dp"
                    tools:ignore="RtlCompat" />



                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:maxLength="20"
                    android:text="19/10/2021"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:translationZ="5dp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:id="@+id/textViewBarra"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:text="|"
        android:textAlignment="center"
        android:textSize="30dp"
        android:translationZ="5dp"
        tools:ignore="RtlCompat" />


</RelativeLayout>

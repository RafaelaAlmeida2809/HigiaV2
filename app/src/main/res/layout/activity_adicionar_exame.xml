<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adicionarExameActivity"
    android:background="@color/principal"
    android:id="@+id/LayoutConstraint">
    <ImageView
        android:id="@+id/imagemFundo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:background="@drawable/borda_superior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textNomePagina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AddExame"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />


    <ScrollView
        android:id="@+id/scrollFundo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="93dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/fundo_meio_arredondado"/>
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/tipo_exame"
                    android:textColor="#000000"
                    android:textSize="20sp"/>
            </RelativeLayout>
            <EditText
                android:id="@+id/textTipoExame"
                android:layout_width="291dp"
                android:layout_height="44dp"
                android:ems="10"
                android:hint="@string/ex_ressonancia"
                android:inputType="textPersonName"
                android:text=""
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Obrigatorio"
                android:textColor="#ff0000"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="11sp"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/fundo_meio_arredondado"/>
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/parte_do_corpo"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/textParteCorpo"
                android:layout_width="291dp"
                android:layout_height="44dp"
                android:ems="10"
                android:hint="@string/ex_olho"
                android:inputType="textPersonName"
                android:text=""
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Obrigatorio"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#ff0000"
                android:textSize="12sp"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/fundo_meio_arredondado"/>
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/nome_do_medico"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </RelativeLayout>
            <Spinner
                android:id="@+id/spinnerMedico"
                android:layout_width="300dp"
                android:layout_height="34dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Obrigatorio"
                android:textColor="#ff0000"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="11sp"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/fundo_meio_arredondado"/>
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/data_do_exame"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/textDiaExame"
                    android:layout_width="44dp"
                    android:layout_height="39dp"
                    android:ems="10"
                    android:hint="@string/dia"
                    android:inputType="number" />

                <Spinner
                    android:id="@+id/spinnerMes"
                    android:layout_width="170dp"
                    android:layout_height="30dp"/>

                <EditText
                    android:id="@+id/textAnoExame"
                    android:layout_width="67dp"
                    android:layout_height="39dp"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="@string/ano"
                    android:inputType="number"
                    android:textAlignment="center" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/fundo_meio_arredondado"/>
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="   Adicionar fotos dos exames:"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <Button
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/ic_shortcut_add_a_photo_1"
                    android:onClick="AbrirCamera"/>
                <Button
                    android:layout_width="35dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="60dp"
                    android:background="@mipmap/ic_shortcut_add_photo_alternate2"
                    android:onClick="AbrirGaleria"/>
                <Button
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="60dp"
                    android:background="@mipmap/ic_shortcut_picture_as_pdf"
                    android:onClick="AbrirGaleriaPDF"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/LayoutVertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/LayoutHorizontal1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">
                    <Button
                        android:tag="99"
                        android:id="@+id/imagePhoto1"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:onClick="AbrirImagem"
                        android:scaleType="fitCenter"
                        android:background="#ffffff"/>
                    <Button
                        android:tag="99"
                        android:id="@+id/imagePhoto2"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:onClick="AbrirImagem"
                        android:layout_marginLeft="5dp"
                        android:background="#ffffff"/>
                    <Button
                        android:tag="99"
                        android:id="@+id/imagePhoto3"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:onClick="AbrirImagem"
                        android:layout_marginLeft="5dp"
                        android:background="#ffffff"/>
                    <Button
                        android:tag="99"
                        android:id="@+id/imagePhoto4"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:onClick="AbrirImagem"
                        android:layout_marginLeft="5dp"
                        android:background="#ffffff"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LayoutHorizontal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <Button
                        android:tag="99"
                        android:id="@+id/imagePhoto5"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:onClick="AbrirImagem"
                        android:scaleType="fitCenter"
                        android:background="#ffffff"/>
                    <Button
                        android:tag="99"
                        android:id="@+id/imagePhoto6"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:onClick="AbrirImagem"
                        android:layout_marginLeft="5dp"
                        android:background="#ffffff"/>
                    <Button
                        android:tag="99"
                        android:id="@+id/imagePhoto7"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:onClick="AbrirImagem"
                        android:layout_marginLeft="5dp"
                        android:background="#ffffff"/>
                    <Button
                        android:tag="99"
                        android:id="@+id/imagePhoto8"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:onClick="AbrirImagem"
                        android:layout_marginLeft="5dp"
                        android:background="#ffffff"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LayoutHorizontal3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <Button
                        android:tag="99"
                        android:id="@+id/imagePhoto9"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:scaleType="fitCenter"
                        android:onClick="AbrirImagem"
                        android:background="#ffffff"/>
                    <Button
                        android:tag="99"
                        android:id="@+id/imagePhoto10"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:onClick="AbrirImagem"
                        android:layout_marginLeft="5dp"
                        android:background="#ffffff"/>
                    <Button
                        android:tag="99"
                        android:id="@+id/imagePhoto11"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:onClick="AbrirImagem"
                        android:layout_marginLeft="5dp"
                        android:background="#ffffff"/>
                    <Button
                        android:tag="99"
                        android:id="@+id/imagePhoto12"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:onClick="AbrirImagem"
                        android:layout_marginLeft="5dp"
                        android:background="#ffffff"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="bottom"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp">
                        <Button
                            android:id="@+id/button11"
                            android:layout_width="140dp"
                            android:layout_height="50dp"
                            android:background="@drawable/botao_salvar"
                            android:onClick="AdicionarNovoExame"
                            android:text="@string/Salvar"
                            android:gravity="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <Button
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@mipmap/ic_shortcut_save"
                            android:onClick="AdicionarNovoExame"
                            app:layout_constraintBottom_toBottomOf="@+id/button11"
                            app:layout_constraintEnd_toEndOf="@+id/button11"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/button11"
                            app:layout_constraintTop_toTopOf="@+id/button11" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="020dp">

                        <Button
                            android:id="@+id/button10"
                            android:layout_width="140dp"
                            android:layout_height="50dp"
                            android:background="@drawable/botao_cancelar"
                            android:onClick="ModalVoltar"
                            android:text="@string/Cancelar"
                            android:gravity="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <Button
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:onClick="ModalVoltar"
                            android:background="@mipmap/ic_shortcut_cancel"
                            app:layout_constraintBottom_toBottomOf="@+id/button10"
                            app:layout_constraintEnd_toEndOf="@+id/button10"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/button10"
                            app:layout_constraintTop_toTopOf="@+id/button10" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/modalImagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/modal_imagem" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>